@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Sign In</h1>

<div class="col-3">

    <form method = "post">
        
        <div class="mb-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="User.Username"/>
        </div>
        
        <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="text" class="form-control" asp-for="User.Password"/>
        </div>

        <div class="mb-3">
        <button type="submit" class="btn btn-primary col-md-4">Sign In</button>
        </div>
  
        <div class="mb-3">
        <button type="submit" class="btn btn-secondary col-md-4">Sign Up</button>
        </div>

    </form>
</div>

