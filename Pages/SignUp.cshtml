@page
@model Authenticator.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<h1>Sign Up</h1>


<div class="col-3">

    <form method="post">

    <div class="mb-3">
        <label class="form-label">First Name</label>
        <input type="text" class="form-control" asp-for="User.FirstName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Last Name</label>
        <input type="text" class="form-control" asp-for="User.LastName" />
    </div>

    <div class="mb-3">
        <label class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="User.Username" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" asp-for="User.Password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input type="password" class="form-control" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary col-md-4">Create</button>
    </div>

    <div class="mb-3">  
        <button class="btn btn-secondary">Cancel</button>
    </div>

</form>

</div>




